{
  "name": "saas-ui-pro",
  "version": "0.0.1-beta",
  "description": "The frontend stack for SaaS companies",
  "repository": "git@github.com:saas-js/saas-ui-pro.git",
  "author": "Eelco Wiersma <eelco@appulse.nl>",
  "license": "https://saas-ui.dev/license",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "generate": "yarn workspace @app/graphql generate",
    "predev": "yarn generate",
    "dev:nextjs": "yarn workspace nextjs-app dev",
    "dev:electron": "yarn workspace electron-app dev",
    "dev:vite": "yarn workspace vite-app dev",
    "storybook": "yarn workspace @ui/core dev",
    "build:storybook": "yarn workspace @ui/core build-storybook",
    "storybook:saas-ui": "yarn workspace saas-ui-storybook start-storybook -p 6007",
    "build:tokens": "chakra-cli tokens packages/ui-theme/src",
    "clean:packages": "turbo run clean",
    "publish:saas-ui": "yarn workspaces foreach -p --from '@saas-ui/*' npm publish && yarn changeset tag",
    "eslint": "eslint --cache --cache-location=node_modules/.cache/.eslintcache --fix",
    "lint": "yarn run eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:staged": "lint-staged --allow-empty --config lint-staged.config.js",
    "typecheck": "tsc --noEmit"
  },
  "workspaces": [
    "saas-ui/*",
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@chakra-ui/cli": "^1.9.0",
    "@changesets/cli": "^2.21.1",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.23.3",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "lint-staged": ">=10",
    "microbundle": "^0.14.2",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "turbo": "^1.1.6",
    "typescript": "^4.5.2"
  },
  "packageManager": "yarn@3.1.1"
}
